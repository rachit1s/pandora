#
# Properties file to be used by Quartz Scheduler that runs TBits Jobs.
#
# Version: $Id: $
#

#------------------------------------------------------------------------------
# Properties: Main Scheduler.
#------------------------------------------------------------------------------
org.quartz.scheduler.instanceName = TBitsQuartzScheduler
org.quartz.scheduler.instanceId   = AUTO

#------------------------------------------------------------------------------
# Properties: RMI Scheduler.
#------------------------------------------------------------------------------
org.quartz.scheduler.rmi.registryHost=localhost
org.quartz.scheduler.rmi.registryPort=2099
org.quartz.scheduler.rmi.proxy= true

#------------------------------------------------------------------------------
# Properties: Thread Pool.
#------------------------------------------------------------------------------
org.quartz.threadPool.class = org.quartz.simpl.SimpleThreadPool
org.quartz.threadPool.threadCount = 10
org.quartz.threadPool.threadPriority = 5

#------------------------------------------------------------------------------
# Properties: JobStore.
#------------------------------------------------------------------------------
org.quartz.jobStore.class = org.quartz.simpl.RAMJobStore
org.quartz.jobStore.misfireThreshold = 60000
