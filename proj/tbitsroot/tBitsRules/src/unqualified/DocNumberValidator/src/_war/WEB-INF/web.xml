<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app> 
<filter>
   <filter-name>NTLM HTTP Authentication Filter</filter-name> 
  <filter-class>transbit.tbits.DummyNTMLFilter</filter-class> 
   <init-param>
    <param-name>user</param-name> 
    <param-value>root</param-value> 
    </init-param>
  </filter>
 <!--<filter>
    <filter-name>NTLM HTTP Authentication Filter</filter-name> 
    <filter-class>transbit.tbits.authentication.AuthenticationFilter</filter-class> 
   <init-param>
    <param-name>enabled</param-name> 
    <param-value>true</param-value> 
  </init-param>
  </filter>-->
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>docDbServlet</servlet-name>
    <servlet-class>docnumbervalidator.com.tbitsglobal.docnumbervalidator.server.DocValidatorServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>docDbServlet</servlet-name>
    <url-pattern>/gwtproxy/docdb</url-pattern>
  </servlet-mapping>
  
  <filter-mapping>
	  <filter-name>NTLM HTTP Authentication Filter</filter-name> 
	  <url-pattern>/gwtproxy/*</url-pattern> 
	</filter-mapping>
	
	
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>DocNumberValidator.html</welcome-file>
  </welcome-file-list>

</web-app>
