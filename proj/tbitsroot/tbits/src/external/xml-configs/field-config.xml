<?xml version="1.0"?>
<FieldConfig>
	<!-- Field configuration of confirm_type -->
	<Field name="confirm_type">
	    <Dependency resource="ConfirmTypeGetter" type="SYNCHRONIZE">
		<Primary key="name" value="id" />

	        <Sync key="name" value="$id" />
	        <Sync key="display_name" value="$name" />

	        <Async key="is_final" value="true" />
	    </Dependency>
	</Field>
	<!-- Field configuration of counter_party -->
	<Field name="counter_party">
	    <Dependency resource="CounterPartyGetter" type="SYNCHRONIZE">
		<Primary key="name" value="id" />

	        <Sync key="name" value="$id" />
	        <Sync key="display_name" value="$name" />
	        <Sync key="description" value="$abbrev" />

	        <Async key="is_final" value="true" />
	    </Dependency>
	</Field>
	<!-- Field Configuration for Generate/Validate Dependency -->
	<Field name="balance_id">
	    <Dependency resource="BalanceInfoGenerator" type="GENERATE">
	    	<DependentField name="investor_name" value="$investor" />
	    	<DependentField name="investor_legal_name" value="$investment" />
	    </Dependency>
	</Field>
</FieldConfig> 

