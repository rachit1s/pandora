    <job>
        <job-detail>
            <name>PreventiveAlerts</name>
            <group>PreventiveAlertsGroup</group>
            <description>Send preventive alerts</description>
            <job-class>transbit.tbits.scheduler.PreventiveAlerts</job-class>
            <volatility>false</volatility>
            <durability>false</durability>
            <recover>false</recover>
            <job-data-map>
                <entry>
                	<!-- Before how long (in minutes) an alert should be sent. -->
                    <key>alertTime</key>
                    <value>60</value>
                </entry>
                <entry>
                	<!-- The frequency(in minutes) at which the event is fired. This needed to ensure the event is correctly handled. -->
                    <key>schFreq</key>
                    <value>5</value>
                </entry>
                <entry>
                	<!-- a == assignee, l == loggers, s = subscribers, c = CC. 
                		The valid examples are  "alsc" which means send mail to assignee, loggers, subscribers and CC. 
                		"a" means send mail to only assignee. -->
                    <key>recipients</key>
                    <value>a</value>
                </entry>
                <entry>
                    <key>subject</key>
                    <value>Upcoming requests alert.</value>
                </entry>
                <entry>
                    <key>fromAddress</key>
                    <value>donotreply@tbits</value>
                </entry>
            </job-data-map>
        </job-detail>
        <trigger>
            <cron>
                <name>PreventiveAlerts</name>
                <group>PreventiveAlertsGroup</group>
                <job-name>PreventiveAlerts</job-name>
                <job-group>PreventiveAlertsGroup</job-group>
                <!-- If you change cron expression, dont forget to update schFreq (in minutes)  -->
                <cron-expression>0 0/5 * ? * *</cron-expression>
            </cron>
        </trigger>
    </job>
