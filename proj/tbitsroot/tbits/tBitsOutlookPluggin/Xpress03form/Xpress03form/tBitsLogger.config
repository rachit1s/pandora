<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- This section contains the log4net configuration settings -->
  <log4net>
    <appender name="PatternFileAppender" type="Xpress03form.PatternFileAppender, Xpress03form">
      <!-- File pattern to group files by date, then by session property -->
      <file value="logs\%date{yyyy-MM-dd}\output.log" />
      <layout type="log4net.Layout.PatternLayout" value="%date [%thread] %-5level %logger - %message%newline" />
    </appender>
    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="Error" />
      <appender-ref ref="PatternFileAppender" />
    </root>
  </log4net>
</configuration>