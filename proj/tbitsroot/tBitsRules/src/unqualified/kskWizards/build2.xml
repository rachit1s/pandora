<project name="project" default="default">
	<property file="build.properties" />
    <description>
            Copies the _war into destination
    </description>

    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="prepare" description="Copies the _war into destination">
        
    </target>

    <!-- - - - - - - - - - - - - - - - - - 
          target: prepare                      
         - - - - - - - - - - - - - - - - - -->
    <target name="prepare">
	<copy todir="war/resources">
		<fileset dir="${tbits.home}/GWTUtils/resources" />
	</copy>    	
	<copy todir="war">
    		<fileset dir="src/_war">
    		</fileset>
    	</copy>
    </target>
</project>
